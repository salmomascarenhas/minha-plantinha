{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "moduleResolution": "node",
    
    /* Advanced Options */
    "skipLibCheck": true,

    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"] 
}