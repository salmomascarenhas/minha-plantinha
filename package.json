{
  "name": "minha-plantinha",
  "version": "1.0.0",
  "description": "TerraControl is a gamified application designed to connect with embedded irrigation systems. It provides a fun and engaging way to manage and monitor your irrigation, turning plant care into a rewarding experience.",
  "main": "index.js",
  "scripts": {
    "build:css": "./node_modules/.bin/tailwindcss -i ./src/input.css -o ./public/css/style.css",
    "watch:css": "npm run build:css -- --watch",
    "dev": "concurrently \"npm:watch:css\" \"ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/app.ts\"",
    "build": "npm run build:css && tsc",
    "start": "node dist/app.js",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salmomascarenhas/minha-plantinha.git"
  },
  "author": "Salmo Mascarenhas <salmo.cruz@gmail.com>, Cassiano, Akyla",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/salmomascarenhas/minha-plantinha/issues"
  },
  "homepage": "https://github.com/salmomascarenhas/minha-plantinha#readme",
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.10.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
